<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingPhoneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <!--<ImageView-->
            <!--android:id="@+id/settingPhoneExitBtn"-->
            <!--android:src="@mipmap/btn_close"-->
            <!--android:contentDescription="@null"-->
            <!--android:padding="20dp"-->
            <!--android:layout_width="55dp"-->
            <!--android:layout_height="55dp" />-->
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:textSize="22sp"
            android:text="免密登录，快速开始"
            android:textColor="@color/colorDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/settingPhoneInput"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="15sp"
                android:inputType="phone"
                android:hint="手机号"
                android:background="@drawable/bg_edit_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/settingPhoneGoBtn"
                android:text="登录"
                android:textSize="15sp"
                android:textColor="@color/colorLight"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_btn_theme_pale_circle"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="未注册手机验证后自动登录"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="45dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="其他登录方式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/settingPhoneQQBtn"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:background="@drawable/bg_btn_light_circle"
                        android:src="@mipmap/ic_qq"
                        android:padding="15dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/settingPhoneWeChatBtn"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:background="@drawable/bg_btn_light_circle"
                        android:src="@mipmap/ic_wechat"
                        android:padding="15dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/settingPhoneLinkedInBtn"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:background="@drawable/bg_btn_light_circle"
                        android:src="@mipmap/ic_linkedin"
                        android:padding="15dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>