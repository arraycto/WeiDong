<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorLight"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/line_bot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/questionAddTitle"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:hint="您的问题（5到50字以内）"
            android:background="@null"
            android:minLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/questionAddContentNum"
                android:textColor="@color/colorDefaultText"
                android:text="0"
                android:layout_toLeftOf="@id/maxWordTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorDefaultText"
                android:id="@+id/maxWordTip"
                android:text=" / 50"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:background="@color/colorLight"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="@null"
            android:src="@drawable/bg_btn_theme_circle"
            android:scaleType="fitXY"
            android:layout_width="3dp"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/groupSeeInfo"
            android:text="相关推荐如下"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorText"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/questionAddAdjust"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/data_null"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="暂无相关推荐问题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>